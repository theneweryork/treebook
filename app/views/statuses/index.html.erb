<div class="page-header">
  <h1>What yo bitches are up to</h1>
</div>

<%= link_to "Post a new status", new_status_path, class: "btn btn-success" %>
<div class="status">
<% @statuses.each do |status| %>
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago." %>
    <%= link_to "Show", status %>
    <span class="admin">
      <%= link_to "Edit", edit_status_path(status) %> |
      <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %> 
    </span>
  </div>
  <% end %>
</div>
